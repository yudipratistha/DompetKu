<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:layout_height="fill_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/filter_date_range"/>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/item_white_round"
                android:padding="@dimen/default_gap"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_regular_form"
                    android:textStyle="bold"
                    android:id="@+id/textView7"
                    android:background="@color/colorPrimary_light"
                    android:padding="@dimen/default_gap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pemasukan dan Pengeluaran:"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/default_gap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/text_regular_form_label"
                        android:id="@+id/textView8x"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pemasukan"/>
                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="@dimen/text_regular_form"
                        android:gravity="end"
                        android:id="@+id/text_pendapatan_total"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="9.000.000"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/default_gap"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/text_regular_form_label"
                        android:id="@+id/textView10xc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pengeluaran"/>
                    <TextView
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="@dimen/text_regular_form"
                        android:textColor="@android:color/holo_red_light"
                        android:gravity="end"
                        android:id="@+id/text_pengeluaran_total"
                        android:background="@drawable/item_bg_white_border_black_bottom"
                        android:paddingBottom="@dimen/default_gap"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="-2.004.004"
                        android:layout_weight="1"/>
                </LinearLayout>
                <TextView
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_regular_form"
                    android:gravity="end"
                    android:layout_gravity="end"
                    android:id="@+id/text_jumlah_total"
                    android:paddingBottom="@dimen/default_gap"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:text="Rp.2.004.004"
                    android:layout_weight="1"/>
                <TextView
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="@dimen/text_regular_form"
                    android:textStyle="bold"
                    android:id="@+id/textView71"
                    android:background="@color/colorPrimary_light"
                    android:padding="@dimen/default_gap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chart Kategori:"/>
                <lecho.lib.hellocharts.view.PieChartView
                    android:id="@+id/chart_pemasukan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/default_gap_form"
                    android:layout_marginBottom="@dimen/default_gap_form"
                    android:minHeight="180dp"/>
                <lecho.lib.hellocharts.view.PieChartView
                    android:id="@+id/chart_pengeluaran"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/default_gap_form"
                    android:layout_marginBottom="@dimen/default_gap_form"
                    android:minHeight="180dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>