<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <include layout="@layout/empty_layout" />
    <android.support.v4.widget.NestedScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:id="@+id/cardViewSum"
                android:padding="8dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5.0dip">
                <View
                    android:background="@color/colorAccentBlue"
                    android:layout_width="3.0dip"
                    android:layout_height="fill_parent" />
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/colorBlack"
                        android:gravity="left"
                        android:id="@+id/text_account"
                        android:padding="7.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:layout_marginBottom="5.0dip"
                        android:text="Saldo"
                        fontPath="fonts/Lato-Bold.ttf" />
                    <TextView
                        android:textSize="16sp"
                        android:textColor="@color/colorAccentRed"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:id="@+id/text_amount_account"
                        android:padding="7.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5.0dip"
                        android:text="-"
                        android:layout_toRightOf="@id/text_account"
                        android:layout_alignParentRight="true" />
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimaryBlueGrey"
                        android:gravity="left"
                        android:id="@+id/title_expense"
                        android:padding="7.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:text="Pengeluaran"
                        android:layout_below="@id/text_account"
                        fontPath="fonts/Lato-Bold.ttf" />
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/colorAccentRed"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:id="@+id/text_pengeluaran_total"
                        android:padding="7.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.2231233312312321123233"
                        android:layout_alignBaseline="@id/title_expense"
                        android:layout_alignBottom="@id/title_expense"
                        android:layout_alignParentRight="true" />
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimaryBlueGrey"
                        android:gravity="left"
                        android:id="@+id/title_income"
                        android:padding="7.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:text="Pemasukan"
                        android:layout_below="@id/title_expense"
                        fontPath="fonts/Lato-Bold.ttf" />
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/colorAccentBlue"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:id="@+id/text_pendapatan_total"
                        android:padding="7.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.2231233312312321123233"
                        android:layout_toRightOf="@id/title_income"
                        android:layout_below="@id/text_pengeluaran_total"
                        android:layout_alignParentRight="true" />
                    <View
                        android:id="@+id/separator"
                        android:background="@color/colorPrimaryBlueGrey"
                        android:layout_width="fill_parent"
                        android:layout_height="1.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_below="@id/text_pendapatan_total" />
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimaryBlueGrey"
                        android:gravity="left"
                        android:id="@+id/title_flow"
                        android:padding="7.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5.0dip"
                        android:text="Arus kas bulan ini"
                        android:layout_below="@id/separator"
                        fontPath="fonts/Lato-Bold.ttf" />
                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/colorPrimaryBlue"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:id="@+id/text_jumlah_total"
                        android:padding="7.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp.1010101002020"
                        android:layout_toRightOf="@id/title_income"
                        android:layout_below="@id/separator"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/activity_list"
                tools:listitem="@layout/transaksi_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add_black_24dp"
        android:tint="#FFF"/>
</android.support.design.widget.CoordinatorLayout>