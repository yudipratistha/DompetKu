<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:stretchColumns="*"
        tools:context=".AddActivity">
        <TableRow android:layout_marginBottom="16dp">

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="24dp"
                    android:layout_height="55dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_minus_black_24dp"
                    android:tint="#444" />
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/distance_input"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="0 Rp" />
            </android.support.design.widget.TextInputLayout>

        </TableRow>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">
            <ImageView
                android:id="@+id/catatan"
                android:layout_width="24dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_cat_date_range_black_24dp"
                android:tint="#444" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/desc_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:hint="Catatan" />
        </android.support.design.widget.TextInputLayout>
        <TableRow android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/icon_activity"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:tint="#444"
                    android:src="@drawable/ic_cat_local_dining_black_24dp" />

                <Spinner
                    android:id="@+id/type_input"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:layout_toEndOf="@id/icon_activity"
                    android:fontFamily="@font/poppins_medium" />
            </RelativeLayout>

        </TableRow>

        <TableRow android:layout_marginBottom="16dp">

            <android.support.design.widget.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/date"
                    android:layout_width="24dp"
                    android:layout_height="55dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_cat_date_range_black_24dp"
                    android:tint="#444" />

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/date_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Today" />
            </android.support.design.widget.TextInputLayout>

        </TableRow>

        <TableRow android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/akun"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:tint="#444"
                    android:src="@drawable/ic_cat_account_balance_wallet_black_24dp" />

                <Spinner
                    android:id="@+id/tipe_akun"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:layout_toEndOf="@id/tipe_akun"
                    android:fontFamily="@font/poppins_medium" />
            </RelativeLayout>

        </TableRow>

    </TableLayout>
</android.support.v4.widget.NestedScrollView>
